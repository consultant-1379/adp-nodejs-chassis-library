{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outFile": "bundle",
    "removeComments": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.js"],
  "exclude": ["demo/overview", "test", "test_js", "node_modules"]
}
