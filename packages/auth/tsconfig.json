{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outFile": "bundle",
    "removeComments": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.js"],
  "exclude": ["src/**/__tests__", "test", "node_modules", "**/node_modules/**"]
}
